 html, body{
 	height: 100%;
 }

body{
	background: url(<%= asset_path "bus.jpg" %>) no-repeat;
	background-size: cover;
}

.col-md-6{
	background:rgba(171, 156, 135, 0.75);
	-moz-box-shadow: -6px 17px 27px #000;
	-webkit-box-shadow: -6px 17px 27px #000;
	box-shadow: -6px 17px 27px #000;
	text-align: center;
}

h1{
	font-family: 'Rancho', serif;
  font-size: 55px;
}

h3 {
	font-family: 'Rancho', serif;
  font-size: 35px;
}
 
p, strong {
	font-family: 'Gudea', sans-serif;
  
  font-size: 2em;
}

.cant-see-me{
	visibility: hidden;
}

.message{
	font: 400 17px/1.6 'Gudea', Verdana, Helvetica, sans-serif;
	font-size: 2em;
}

.next-stop{
	font: 400 35px/1.1 'Rancho', Georgia, serif;
	color: #892122;	
	font-size: 5em;
}

.footer{
	color: black;
	text-align: center;
}

